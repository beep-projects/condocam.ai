[Unit]
Description=condocam.ai Telegram Service
Wants=network-online.target
After=network-online.target

[Service]
WorkingDirectory=/etc/condocam
ExecStart=/etc/condocam/condocambot.sh
Restart=on-failure
RestartSec=30

[Install]
WantedBy=multi-user.target
